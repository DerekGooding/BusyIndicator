<Window
    x:Class="Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:busyIndicator="clr-namespace:BusyIndicator;assembly=BusyIndicator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Demo"
    Width="350"
    Height="500"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/BusyIndicator;component/Theme/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <busyIndicator:BusyMask
        x:Name="BusyIndicator"
        BusyContent="Please wait..."
        IndicatorType="Dashes"
        IsBusy="False"
        FocusAfterBusy="{Binding ElementName = MyTextBox}">
        <StackPanel>
            <ComboBox
                x:Name="IndicatorComboBox"
                Width="120"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                SelectionChanged="ComboBox_SelectionChanged"
                Text="Dash Loader">
                <ComboBoxItem>
                    Dashes
                </ComboBoxItem>
                <ComboBoxItem>
                    ColorDots
                </ComboBoxItem>
                <ComboBoxItem>
                    Bar
                </ComboBoxItem>
                <ComboBoxItem>
                    Ring
                </ComboBoxItem>
                <ComboBoxItem>
                    Ellipse
                </ComboBoxItem>
                <ComboBoxItem>
                    Cupertino
                </ComboBoxItem>
                <ComboBoxItem>
                    Cogs
                </ComboBoxItem>
                <ComboBoxItem>
                    DotCircle
                </ComboBoxItem>
                <ComboBoxItem>
                    Piston
                </ComboBoxItem>
                <ComboBoxItem>
                    Swirl
                </ComboBoxItem>
                <ComboBoxItem>
                    Blocks
                </ComboBoxItem>
                <ComboBoxItem>
                    Wave
                </ComboBoxItem>
                <ComboBoxItem>
                    Pulse
                </ComboBoxItem>
                <ComboBoxItem>
                    DoubleBounce
                </ComboBoxItem>
                <ComboBoxItem>
                    ThreeDots
                </ComboBoxItem>
                <ComboBoxItem>
                    Grid
                </ComboBoxItem>
            </ComboBox>
            <Button
                Width="90"
                Height="25"
                Margin="5"
                Padding="0"
                Click="Button_Click"
                Content="Start"
                FontSize="12" />
            <TextBox
                x:Name="MyTextBox"
                Focusable="True"
                Margin="0 5"
                Width="200"
                Height="20 "/>
        </StackPanel>
    </busyIndicator:BusyMask>

</Window>
