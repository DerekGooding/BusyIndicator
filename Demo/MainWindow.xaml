    <busyIndicator:BusyMask
        x:Name="BusyIndicator"
        BusyContent="Please wait..."
        BusyContentMargin="10"
        FocusAfterBusy="{Binding ElementName=MyTextBox}"
        IndicatorType="Dashes"
        IsBusy="False"
        Background="#D8FFFFFF"
        IsBusyAtStartup="False">
        <!-- Set IsBusyAtStartup to "True" if you want the indicator to be in the "busy" state at startup -->

        <StackPanel>
            <ComboBox
                x:Name="IndicatorComboBox"
                Width="120"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                SelectionChanged="ComboBox_SelectionChanged"
                Text="Dash Loader"
                >
                <ComboBoxItem>
                    Dashes
                </ComboBoxItem>
                <ComboBoxItem>
                    FourDots
                </ComboBoxItem>
                <ComboBoxItem>
                    Bar
                </ComboBoxItem>
                <ComboBoxItem>
                    Ring
                </ComboBoxItem>
                <ComboBoxItem>
                    Ellipse
                </ComboBoxItem>
                <ComboBoxItem>
                    Cupertino
                </ComboBoxItem>
                <ComboBoxItem>
                    Cogs
                </ComboBoxItem>
                <ComboBoxItem>
                    DotCircle
                </ComboBoxItem>
                <ComboBoxItem>
                    Piston
                </ComboBoxItem>
                <ComboBoxItem>
                    Swirl
                </ComboBoxItem>
                <ComboBoxItem>
                    Blocks
                </ComboBoxItem>
                <ComboBoxItem>
                    Wave
                </ComboBoxItem>
                <ComboBoxItem>
                    Pulse
                </ComboBoxItem>
                <ComboBoxItem>
                    DoubleBounce
                </ComboBoxItem>
                <ComboBoxItem>
                    ThreeDots
                </ComboBoxItem>
                <ComboBoxItem>
                    Grid
                </ComboBoxItem>
                <ComboBoxItem>
                    BouncingDot
                </ComboBoxItem>
                <ComboBoxItem>
                    Escalade
                </ComboBoxItem>
                <ComboBoxItem>
                    Twist
                </ComboBoxItem>
            </ComboBox>
            <Button
                Width="90"
                Height="25"
                Margin="5"
                Padding="0"
                Click="Button_Click"
                Content="Start"
                FontSize="12"
                />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Margin="5" Text="Duration: " />
                <TextBox
                    x:Name="MyTextBox"
                    Width="100"
                    Height="20"
                    Margin="0 5"
                    Focusable="True"
                    PreviewTextInput="NumberValidationTextBox"
                    Text="10"
                    />
            </StackPanel>
        </StackPanel>
    </busyIndicator:BusyMask>
