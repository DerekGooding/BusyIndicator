                            Duration="00:00:02"
                            RepeatBehavior="Forever">
                            <DoubleAnimationUsingKeyFrames
                                BeginTime="00:00:00.4"
                                Storyboard.TargetName="Rectangle01"
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
                                <LinearDoubleKeyFrame
                                    KeyTime="00:00:00.4"
                                    Value="0" />
                                <LinearDoubleKeyFrame
                                    KeyTime="00:00:01.0"
                                    Value="1" />
                            </DoubleAnimationUsingKeyFrames>

